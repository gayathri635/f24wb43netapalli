extends layout

block content
  h1= title
  p Today is a very special festival for Indians.
  button(type="button", class="btn btn-secondary", onclick="boost()") Sample Button
  div(id="boost") add in extra 

  script. 
    var value = 0;
    var amt = 3;
    function boost(){
      amt += 1;
      value += amt;
      document.getElementById("boost").innerText = `Boosted ${value} by ${amt}.`;
      }

  a(href="/chocolate") View Chocolate Results
